{
  "manifest_version": 3,
  "name": "Anchor",
  "version": "1.0.0",
  "description": "Track focus sessions with lock-in detection, idle monitoring, and productivity metrics",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "idle",
    "notifications",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://*/*"
    ]
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Anchor"
  }
}

